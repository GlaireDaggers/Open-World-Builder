{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Level",
    "definitions": {
    	"Level": {
    		"type": "object",
    		"additionalProperties": false,
    		"properties": {
    			"root": {
    				"$ref": "#/definitions/SceneNode"
    			}
    		},
    		"required": [
    			"root"
    		]
    	},
    	"Node": {
    		"type": "object",
    		"properties": {
                "type": {
                    "type": "string"
                },
    			"guid": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "position": {
                    "type": "string",
                    "$comment": "Vector3 (formatted as: '[x], [y], [z]')"
                },
                "rotation": {
                    "type": "string",
                    "$comment": "Quaternion (formatted as: '[x], [y], [z], [w]')"
                },
                "scale": {
                    "type": "string",
                    "$comment": "Vector3 (formatted as: '[x], [y], [z]')"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Node"
                    }
                }
    		},
            "required": [
                "type",
                "guid",
                "name",
                "children",
                "position",
                "rotation",
                "scale"
            ]
    	},
    	"SceneNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"ambientColor": {
    					"type": "string",
                    	"$comment": "Color (formatted as: '[r], [g], [b], [a]')"
    				},
    				"ambientIntensity": {
    					"type": "number"
    				}
    			}},
    			{"required": [
    				"ambientColor",
    				"ambientIntensity"
    			]}
    		]
    	},
    	"GenericEntityNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"entityDefinition": {
    					"type": "string",
    					"format": "uuid"
    				},
    				"fields": {
    					"type": "object"
    				}
    			}},
    			{"required": [
    				"entityDefinition",
    				"fields"
    			]}
    		]
    	},
    	"LightNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"lightType": {
    					"type": "integer"
    				},
    				"color": {
    					"type": "string",
                    	"$comment": "Color (formatted as: '[r], [g], [b], [a]')"
    				},
    				"intensity": {
    					"type": "number"
    				},
    				"radius": {
    					"type": "number"
    				},
    				"innerConeAngle": {
    					"type": "number"
    				},
    				"outerConeAngle": {
    					"type": "number"
    				}
    			}},
    			{"required": [
    				"lightType",
    				"color",
    				"intensity",
    				"radius",
    				"innerConeAngle",
    				"outerConeAngle"
    			]}
    		]
    	},
    	"SplineNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"points": {
    					"type": "array",
    					"items": {
    						"$ref": "#/definitions/SplineControlPoint"
    					}
    				},
    				"closed": {
    					"type": "boolean"
    				}
    			}},
    			{"required": [
    				"points",
    				"closed"
    			]}
    		]
    	},
    	"SplineControlPoint": {
    		"type": "object",
    		"properties": {
                "position": {
                    "type": "string",
                    "$comment": "Vector3 (formatted as: '[x], [y], [z]')"
                },
                "rotation": {
                    "type": "string",
                    "$comment": "Quaternion (formatted as: '[x], [y], [z], [w]')"
                },
                "scale": {
                    "type": "number"
                }
    		},
            "required": [
                "position",
                "rotation",
                "scale"
            ]
    	},
    	"StaticMeshNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"meshPath": {
    					"type": "string"
    				},
    				"visible": {
    					"type": "boolean"
    				},
    				"collision": {
    					"type": "integer"
    				}
    			}},
    			{"required": [
    				"meshPath",
    				"visible",
    				"collision"
    			]}
    		]
    	},
    	"BrushNode": {
    		"allOf": [
    			{"$ref": "#/definitions/Node"},
    			{"properties": {
    				"visible": {
    					"type": "boolean"
    				},
    				"collision": {
    					"type": "integer"
    				},
    				"planes": {
    					"type": "array",
    					"items": {
    						"$ref": "#/definitions/BrushPlane"
    					}
    				}
    			}},
    			{"required": [
    				"visible",
    				"collision",
    				"planes"
    			]}
    		]
    	},
    	"BrushPlane": {
    		"type": "object",
    		"properties": {
                "position": {
                    "type": "string",
                    "$comment": "Vector3 (formatted as: '[x], [y], [z]')"
                },
                "rotation": {
                    "type": "string",
                    "$comment": "Quaternion (formatted as: '[x], [y], [z], [w]')"
                },
                "visible": {
                    "type": "boolean"
                },
                "texturePath": {
                    "type": "string"
                },
                "textureScale": {
                    "type": "string",
                    "$comment": "Vector2 (formatted as: '[x], [y]')"
                },
                "textureOffset": {
                    "type": "string",
                    "$comment": "Vector2 (formatted as: '[x], [y]')"
                }
    		},
            "required": [
                "position",
                "rotation",
                "visible",
                "texturePath",
                "textureScale",
                "textureOffset"
            ]
    	}
    }
}
